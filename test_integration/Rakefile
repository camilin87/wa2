task :default => [:staging]

task :staging do
    run_tests "STAGING"
end

task :production do
    run_tests "PRODUCTION"
end

task :debug do
    # launch the debug webserver here
    run_tests "DEBUG"
    # shutdown the debug webserver here
end

def run_tests(env)
    sh "rake -f api_tests.rb default[#{env}]"
end
